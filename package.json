{
  "private": "true",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "build-deps": "lerna run build --ignore={@episto/server-tests,@episto/server-api,@episto/frontend,@eutil/script-producer,@eutil/pipeline-generator}",
    "build-server": "lerna run build --scope=@episto/server-api --include-filtered-dependencies",
    "build-client": "lerna run build --scope=@episto/frontend --include-filtered-dependencies",
    "start-built-server": "node --es-module-specifier-resolution=node ./packages/server-api/dist/server.js"
  },
  "devDependencies": {
    "lerna": "6.0.3"
  },
  "name": "epistogram"
}