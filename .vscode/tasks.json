    "version": "2.0.0",
    "tasks": [
        {
            "label": "generate_pipelines",
            "type": "shell",
            "command": "yarn start",
            "problemMatcher": [],
            "options": {
                "cwd": "${workspaceFolder}/misc/scripts/pipelineGenerator"
            },
        },
        {
            "label": "styleGen",
            "type": "shell",
            "command": "cmd /c node scripts\\styleGen\\styleGen.js",
            "problemMatcher": []
        },
        {
            "label": "run test-misc",
            "type": "shell",
            "command": "npx jest -i misc.test.ts",
            "problemMatcher": [],
        },
        // run
        {
            "type": "shell",
            "label": "run frontend",
            "command": "yarn start",
            "problemMatcher": [],
            "options": {
                "cwd": "${workspaceFolder}/packages/frontend"
            },
            "presentation": {
                "group": "run"
            }
        },
        {
            "type": "shell",
            "label": "run backend",
            "command": "yarn start",
            "problemMatcher": [],
            "options": {
                "cwd": "${workspaceFolder}/packages/backend"
            },
            "presentation": {
                "group": "run"
            }
        },
        // run-all
        {
            "label": "run-all",
            "dependsOn": [
                "run frontend",
                "run backend",
            ],
            "problemMatcher": []
        },
        // build deps
        {
            "label": "builddeps",
            "type": "shell",
            "command": "yarn builddeps",
            "problemMatcher": [],
            "presentation": {
                "group": "deps"
            }
